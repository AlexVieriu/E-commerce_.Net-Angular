{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C#: API Debug",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}\\skinet\\API\\API.csproj"
    },
    {
      "name": "Angular Debug (Manual Chrome)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "https://localhost:4200/",
      "webRoot": "${workspaceFolder}\\skinet\\client",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/src/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "Angular Debug (Auto Launch Chrome)",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "https://localhost:4200/",
      "webRoot": "${workspaceFolder}\\skinet\\client",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/src/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      },
    },
    {
      "name": "Angular Debug (Auto Launch Edge)",
      "type": "msedge",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "https://localhost:4200/",
      "webRoot": "${workspaceFolder}\\skinet\\client",
      "runtimeExecutable": "C:\\Program Files (x86)\\Microsoft\\Edge Dev\\Application\\msedge.exe",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/src/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      },
    },
  ],
  "compounds": [
    {
      "name": "ðŸš€ Debug API & Angular (Manual Chrome)",
      "configurations": [
        "C#: API Debug",
        "Angular Debug (Manual Chrome)"
      ],
      "stopAll": true
    },
    {
      "name": "ðŸš€ Debug API & Angular (Auto Edge)",
      "configurations": [
        "C#: API Debug",
        "Angular Debug (Auto Launch Edge)"
      ]
    },
    {
      "name": "ðŸš€ Debug API & Angular (Auto Chrome)",
      "configurations": [
        "C#: API Debug",
        "Angular Debug (Auto Launch Chrome)"
      ]
    }
  ]
}